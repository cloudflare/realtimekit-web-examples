{
  "private": true,
  "workspaces": [
    "examples/*"
  ],
  "scripts": {
    "update-cloudflare-realtime-deps": "./update-cloudflare-realtime-deps.sh",
    "build": "bash -c 'npm run update-cloudflare-realtime-deps -- \"$@\" && npm i && npm run build --workspaces --if-present' -- \"$@\"",
    "postbuild": "./postbuild.sh",
    "format": "prettier -w .",
    "deploy": "wrangler deploy"
  },
  "devDependencies": {
    "prettier": "^2.8.0",
    "wrangler": "^4.59.1"
  },
  "prettier": {
    "singleQuote": true,
    "proseWrap": "always"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.4.0"
  }
}
